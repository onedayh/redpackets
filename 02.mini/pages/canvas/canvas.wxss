.share-wrap{
    display: flex;
    height: 90rpx;
    position: fixed;
    z-index: 100;
    width: 100%;
    bottom: 0;
    left: 0;
    background-color: #BC1224;
}
.share, .save{
    width: 50%;
    color: #fff;
    font-size: 34rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
}
.share{
    background-color:#DC143C;
    border-radius: 0;
    padding: 0;
    margin: 0;
}
